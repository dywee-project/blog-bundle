{# Dywee\BlogBundle\Resources\View\Blog\list.html.twig #}

{%  extends "DyweeBlogBundle::admin.html.twig" %}

{% block body %}

    <a href="{{ path('dywee_blog_add') }}" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Ajouter</a>

    <div class="title-heading">
    <h1 class="text-center">Liste des articles</h1>
    </div>
    {% if articles|length > 0 %}
        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Maj</th>
                    <th>Visite</th>
                    <th>Statut</th>
                    <th>Par</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {%  for article in articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.title }}</td>
                        <td>{{ article.publicationDate|date('d/m/Y à H\\hm') }}</td>
                        <td>NC</td>
                        <td>{% if article.state == 1 %}
                                        <span class="label label-success">Publié</span>
                                    {% elseif article.state == 0 %}
                                        <span class="label label-warning">Brouillon</span>
                                    {%  endif %}
                            
                        </td>
                        <td>{{ article.createdBy.firstName }} {{ article.createdBy.lastName }}</td>
                        <td>
                            <a href="{{ path('dywee_blog_view', {data: article.id}) }}" class="link-unstyled" target="_blank"><i class="fa fa-eye"></i> </a>
                            <a href="{{ path('dywee_blog_update', {id: article.id}) }}" class="link-unstyled"><i class="fa fa-pencil"></i> </a>
                            <a href="{{ path('dywee_blog_delete', {id: article.id}) }}" class="link-unstyled"><i class="fa fa-trash-o"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Vous n'avez encore écrit aucun article.</p>
        <p><a href="{{ path('dywee_blog_add') }}" class="btn btn-success"><i class="fa fa-plus"></i> Ajouter</a></p>
    {% endif %}
{% endblock %}